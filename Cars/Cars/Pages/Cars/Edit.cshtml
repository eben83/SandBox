@page "{carId:int?}"
@using CarsLibrary.Core
@model Pages.Cars.Edit

@{
    ViewData["Title"] = "Edit";
}

<h2>Editing @Model.Car.Make @Model.Car.Model</h2>

<form method="post">
    <input type="hidden"  asp-for="Car.Id"/>
    <div class="form-group">
        <label asp-for="Car.Make"></label>
        <input asp-for="Car.Make" class="form-control"/>
        <span class="text-danger" asp-validation-for="Car.Make"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Car.Model"></label>
        <input asp-for="Car.Model" class="form-control"/>
        <span class="text-danger" asp-validation-for="Car.Model"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Car.Colour"></label>
        <input asp-for="Car.Colour" class="form-control"/>
        <span class="text-danger" asp-validation-for="Car.Colour"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Car.carType"></label>
        <select class="form-control" asp-for="Car.carType" asp-items="Model.Cars"></select>
        <span class="text-danger" asp-validation-for="Car.carType"></span>
    </div>
    <button type="submit" class="btn btn-primary btn-lg">Save</button>
</form>

@section Scripts
{
    <partial name="_ValidationScriptsPartial"/>
}
