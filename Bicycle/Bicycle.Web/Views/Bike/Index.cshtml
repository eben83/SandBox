@model System.Collections.Generic.IEnumerable<Bicycle.Data.Models.Bike>

@{
    ViewBag.Title = "Index";
}

<h2>Bike Shop</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<p>
    There are @Model.Count() Bikes
</p>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BikeMake)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BikeMake)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {id = item.Id}) |
                @Html.ActionLink("Details", "Details", new {id = item.Id}) |
                @Html.ActionLink("Delete", "Delete", new {id = item.Id})
            </td>
        </tr>
        
    }
</table>
