@model Bicycle.Data.Models.Bike

@{
    ViewBag.Title = "Create";
}

<h3>Create a new bike</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Bikes</h4>
        <hr/>
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        <div class="form-group">
            @Html.LabelFor(model => model.BikeMake, new {htmlattributes = new {@class = "Form-control"}});
            @Html.ValidationMessageFor(model => model.BikeMake, "", new {@class = "text-danger"})
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-primary btn-lg"/>
        </div>
    </div>
}