@page "{restarantId:Int}"
@model EditModel
@{
    ViewData["Title"] = "Edit";
}

<h2>
    Editing @Model.Restarant.Name
</h2>

<form method="post">

    <input type="hidden" asp-for="Restarant.ID" />

    <div class="form-group">
        <label asp-for="Restarant.Name"></label>
        <input asp-for="Restarant.Name" class="form-control" />
        <span class="text-danger" asp-validation-for="Restarant.Name"></span>

    </div>
    <div class="form-group">
        <label asp-for="Restarant.Location"></label>
        <input asp-for="Restarant.Location" class="form-control" />
        <span class="text-danger" asp-validation-for="Restarant.Location"></span>

    </div>
    <div class="form-group">
        <label asp-for="Restarant.Cuisine"></label>
        <select class="form-control" asp-for="Restarant.Cuisine"
                asp-items="Model.Cuisines">
            <span class="text-danger" asp-validation-for="Restarant.Cuisine"></span>

        </select>

    </div>


    <button type="submit" class="btn btn-primary">Save</button>
</form>