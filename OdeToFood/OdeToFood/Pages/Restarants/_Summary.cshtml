@using OdeToFood.Data
@model Restarant

<div class="panel panel-defualt">
    <div class="panel-heading">
        <h3>@Model.Name</h3>
    </div>
    <div class="panel-body">
        <span>Location: @Model.Location</span>
        <span>Cuisine: @Model.Cuisine</span>
    </div>
    <div class="panel-footer">
        <a asp-page="./Detail"
           asp-route-restarantId="@restarant.ID">Click</a>
        <a asp-page="./Edit"
           asp-route-restarantId="@restarant.ID">Edit</a>
        <a asp-page="./Delete"
           asp-route-restarantId="@restarant.ID">Delete</a>
    </div>
</div>