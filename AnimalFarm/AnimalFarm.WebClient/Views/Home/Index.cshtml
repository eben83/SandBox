@{
    Layout = "_Layout";
    ViewData["Title"] = "Home Page";
}
    <div>
        <div class="jumbotron text-center">
            <h1>My Animal Farm Application</h1>
        </div>
        <div class="main">
            <h4>Main Menu</h4>
        </div>
        <div class="mainMenu">
            <div class="row col-3-md">
                <a asp-controller="Home" asp-action="AddAnimal" class="btn btn-lg btn-primary">Add Animal</a>
            </div>
            <div class="row col-3-md">
                <a asp-controller="Home" asp-action="InteractWithOneAnimal" class="btn btn-lg btn-primary">Interact With One Animal</a>
            </div>
            <div class="row col-3-md">
                <a asp-controller="Home" asp-action="InteractWithAllAnimals" class="btn btn-lg btn-primary">Interact With All Animals</a>
            </div>
            
        </div>
    </div>
