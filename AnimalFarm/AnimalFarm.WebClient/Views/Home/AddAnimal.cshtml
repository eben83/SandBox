@using AnimalFarm.Core.Domain
@{
    Layout = "_Layout";
    ViewData["Title"] = "Add Animals";
}
<div class="jumbotron">
    <div>
        <h4>Welcome to my Animal Aplication</h4>
    </div>
    <div class="d-flex justify-content-center">
        <div>
            <div>
                <div>
                    <label>Please add an animal:</label>
                </div>
                <div>
                    <div class="d-flex justify-content-center">
                        <select>
                            @foreach (var option in Enum.GetValues(typeof(AnimalTypes)))
                            {
                                <option value="@Convert.ToInt32(option)">@option</option>
                            }
                        </select>
                    </div>
            
                    <div>
                        <label>Name:</label>
                        <input class="was-validated form-control form-control-lg" placeholder="Enter a Name" type="text" required/>
                        <div class="invalid-feedback">Please Enter a name</div>
                        <br/>
                        <div class="d-flex justify-content-center">
                            <input class="btn btn-lg btn-primary" type="button" value="Submit"/>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>