@using AnimalFarm.Core.Domain
@{
    Layout = "_Layout";
    ViewData["Title"] = "Interact With All Animals";
}


<div class="jumbotron">
    <div class="d-flex justify-content-center">
        <div>
            <div>
                <h4>Here you will be able to interact with all your animals at once.</h4>
            </div>
            <div>
                <h4>What would you like your animals to do?</h4>
            </div>
            <div class="d-flex justify-content-center">
                <select>
                    @foreach (var action in Enum.GetValues(typeof(AnimalActions)))
                    {
                        <option value="@Convert.ToInt32(action)">@action</option>  
                    }
                </select>
            </div>
            <br/>
            <div class="d-flex justify-content-center">
                <input class="btn btn-lg btn-primary" type="button" value="Submit"/>
            </div>
        </div>
    </div>
</div>
